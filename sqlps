$location = "eastus"

$resourceGroupName = "sunny_rg"

if (!(Get-AzResourceGroup $resourceGroupName -ErrorAction SilentlyContinue))
   { 
     New-AzResourceGroup -Name $resourceGroupName -Location $location
     "Resource Group $resourceGroupName Created"
   }
else
   {
        "Resource Group $resourceGroupName already Exists"
   }


New-AzResourceGroupDeployment -ResourceGroupName $resourceGroupName -TemplateUri "C:\Users\sudeol\Documents\SQLDeployment\ADFtemplate.json"

##Read-Host -Prompt "Press [ENTER] to continue ..."





$location = "eastus"
$adminUser = "sqlserver-admin"
$adminPassword = ConvertTo-SecureString "tiCtoC#1357" -AsPlainText -Force

$resourceGroupName = "sunny_rg"

if (!(Get-AzResourceGroup $resourceGroupName -ErrorAction SilentlyContinue))
   { 
     New-AzResourceGroup -Name $resourceGroupName -Location $location
     "Resource Group $resourceGroupName Created"
   }
else
   {
        "Resource Group $resourceGroupName already Exists"
   }


New-AzResourceGroupDeployment -ResourceGroupName $resourceGroupName -TemplateUri "C:\Users\sudeol\Documents\SQLDeployment\template.json" -administratorLogin $adminUser -administratorLoginPassword $adminPassword

##Read-Host -Prompt "Press [ENTER] to continue ..."



